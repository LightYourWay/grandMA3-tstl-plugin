{
	"name": "grandma3-tstl-plugin",
	"version": "0.2.2",
	"description": "a TypeScriptToLua plugin that allows for direct export to grandMA3 compatible Lua files",
	"main": "dist/main.js",
	"types": "dist/main.d.ts",
	"scripts": {
		"prepare": "tsc",
		"build": "tsc",
		"dev": "tsc --watch",
		"lint:check": "prettier --check **/*.{ts,tsx}",
		"lint:fix": "prettier --write **/*.{ts,tsx}"
	},
	"prettier": {
		"printWidth": 100,
		"proseWrap": "never",
		"singleQuote": true,
		"trailingComma": "all",
		"useTabs": true
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/LightYourWay/grandMA3-tstl-plugin.git"
	},
	"author": "Lukas Runge",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/LightYourWay/grandMA3-tstl-plugin/issues"
	},
	"homepage": "https://github.com/LightYourWay/grandMA3-tstl-plugin#readme",
	"devDependencies": {
		"prettier": "^2.7.1",
		"typescript-to-lua": "^1.10.1"
	}
}
